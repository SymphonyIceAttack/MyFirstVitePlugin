{
    "compilerOptions": {
        "module": "ESNext",
        "target": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "declaration": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "lib": ["ESNext"],
        "sourceMap": false,
        "noEmitOnError": true,
        "noImplicitAny": false
    },
    "include": ["src/*", "*.d.ts", "src/rollup.config.js"],
    "exclude": ["node_modules", "examples", "dist"]
}
